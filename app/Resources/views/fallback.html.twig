{% import 'CMSBundle::macros.html.twig' as macros %}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ site_manager.site.fullName }}{% endblock %}</title>
    <link href="{{ asset('favicon.ico') }}" rel="SHORTCUT ICON">
    {% block stylesheets %}
        {% stylesheets '@bootstrap_css' %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
        {% endstylesheets %}
        {% stylesheets '@CMSBundle/Resources/public/less/custom.less' %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
        {% endstylesheets %}
        {% stylesheets '@font_awesome' %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css"/>
        {% endstylesheets %}
        <style>
            .ui-autocomplete-loading {
                background: url('{% image '@CoreBundle/Resources/public/images/ui/ajax-loader.gif' %}{{ asset_url }}{% endimage %}') no-repeat right center
            }
        </style>
    {% endblock %}
</head>
<body>
<div class="container">
    {% block brand_header %}
        <div class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <button type="button" class="navbar-toggle pull-right" data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">{{ site_manager.site.shortName }}</a>
                </div>
                <ul class="navbar-collapse collapse nav navbar-nav">
                    {{ macros.menu_block('main_menu') }}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user and is_granted('ROLE_USER') %}
                        {{ macros.menu_block('game_menu') }}
                    {% endif %}
                    {{ macros.account_menu() }}
                </ul>

            </div>
            <!--/.container-fluid -->
        </div>
    {% endblock %}
    {% for type,messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}
    {% block main_content %}
        <div class="row">
            <div class="col-sm-12 col-md-8" id="main-content">
                {% block body %}{% endblock %}
            </div>
        </div>
    {% endblock %}
</div>
<div id="footer">
    <div class="container">
        <hr/>
        <p>{{ site_manager.site.fullName }} Â© {{ 'now' | date('Y') }}</p>
        <p>Powered by Nemesis Team Contest Platform</p>
    </div>
</div>

{% block javascripts %}
    {{ macros.js_scripts() }}
    {{ macros.js_trackers() }}
    {{ macros.js_menu_activator() }}
{% endblock %}
</body>
</html>
