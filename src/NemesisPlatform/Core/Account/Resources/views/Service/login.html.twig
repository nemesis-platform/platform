{% extends theme.layout('base') %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            <i class="fa fa-warning"></i> {{ error.message | trans({'contacts_page':path('page_by_alias',{'alias':'contacts'})},'security') | raw }}
        </div>
    {% endif %}

    <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="username">Логин:</label>

            <div class="col-sm-10">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="password">Пароль:</label>

            <div class="col-sm-10">
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary" type="submit">Войти</button>
                <small>
                    <a href="{{ path('site_service_password_restore_request') }}">Забыли пароль?</a>
                </small>
            </div>
        </div>
    </form>
{% endblock %}
