{% extends 'NemesisAdminBundle::admin.html.twig' %}

{% block title %}Список тегов :: {{ parent() }}{% endblock %}

{% block header %}
    Список тегов
    <small><a href="{{ path('tag_create') }}">Добавить</a></small>
{% endblock %}

{% block body %}
    <h2>
        <a href="{{ path('site_admin_utils_tag_user') }}">Маркировать пользователей</a>
        <a href="{{ path('site_admin_utils_tag_team') }}">Маркировать команды</a>
    </h2>
    <ul>
        {% for tag in tags %}
            <li><a href="{{ path('tag_edit',{'tag':tag.id}) }}">{{ tag.name }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
